{% macro meal_photo(meal) %}
    {% set photo = get_meal_photo(meal, '400') %}
    {% set photo_max = get_meal_photo(meal, '800') %}
    {% if photo %}
        <a data-controller="zoom" title="{{ meal.name }}" data-zoom="{{ photo_max }}" class="thumbnail" href="#">
            <img class="img-fluid" src="{{ photo }}" alt="{{ meal.name }}">
        </a>
    {% else %}
        <div class="no-photo">
            Aucune photo
        </div>
    {% endif %}
{% endmacro %}

{% macro meal_flags(meal) %}
    {% if meal.portuguese %}<img src="{{ asset('build/images/flag-portugal.png') }}" alt="Plat portugais" width="24" height="16" /> {% endif %}
{% endmacro %}
