{% extends 'layout-admin.html.twig' %}

{% block title 'Suppression de la catégorie ' ~ category.name %}

{% set admin_breadcrumb = [
    {label: 'Gestion du menu', href: path('admin_menu_index') },
    {label: category.name, href: path('admin_menu_category_edit', {id: category.id})},
    {label: 'Suppression'}
] %}

{% block content %}
    <p>Vous êtes sur le point de supprimer la catégorie <em>{{ category.name }}</em>.</p>
    <form action="{{ path('admin_menu_category_delete', {id: category.id}) }}" method="POST">
        <button class="btn btn-danger">
            <span class="glyphicon glyphicon-fire"></span>
            Supprimer
        </button>
        ou
        <a href="{{ path('admin_menu_category_edit', {id: category.id}) }}">Revenir à la catégorie</a>
    </form>
{% endblock %}
