{% extends 'layout.html.twig' %}

{% block title 'Votre panier' %}

{% block content %}
    <div class="page-header">
        <h2>Commande du {{ order.createdAt|format_date('full') }}, à {{ order.createdAt|format_datetime('none', 'short') }}</h2>
    </div>

    <h3 class="mt-4">Coordonnées</h3>
    <ul>
        <li><strong>Nom et prénom</strong> : {{ order.fullname }}</li>
        <li><strong>Téléphone</strong> : {{ order.phone }}</li>
        <li><strong>E-mail</strong> : {{ order.email }}</li>
    </ul>

    <h3 class="mt-4">Votre commande</h3>
    <p><strong>Date et heure d'enlèvement</strong> : {{ order.date }}</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="5%">Qté</th>
                <th width="70%">Produit</th>
                <th width="5%" class="text-right">PU</th>
                <th width="10%" class="text-right">Total</th>
            </tr>
        </thead>
        <tbody>
            {% for row in order.order.rows %}
                <tr>
                    <td>{{ row.quantity }}x</td>
                    <td>{{ row.meal }}</td>
                    <td class="text-right">{{ row.unit_price|format_price }}</td>
                    <td class="text-right">{{ row.price|format_price }}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-right">Total :</th>
                <th class="text-right">{{ order.order.total_price|format_price }}</th>
            </tr>
        </tfoot>
    </table>
    <h3>Remarques</h3>
    {% if order.observations %}
        <p>{{ order.observations|nl2br }}</p>
    {% else %}
        <p><em>Aucune remarque.</em></p>
    {% endif %}

{% endblock %}
