{% extends "base.html.twig" %}

{% block body %}
    {% set admin_breadcrumb = admin_breadcrumb|default(null) %}
    <div class="container">
        <h1 class="admin-title"><a href="{{ path('admin_index') }}">Gestion de {{ sitename }}</a></h1>
        <ol class="breadcrumb">
            {% if admin_breadcrumb is null %}
                <li class="breadcrumb-item active" aria-current="page">Accueil</li>
            {% else %}
                <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('admin_index') }}">Accueil</a></li>
                {% for crumb in admin_breadcrumb %}
                    {% if crumb.href|default(null) %}
                        <li class="breadcrumb-item"><a href="{{ crumb.href }}">{{ crumb.label }}</a></li>
                    {% else %}
                        <li class="breadcrumb-item">{{ crumb.label }}</li>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </ol>
        {% for message in app.request.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% block content '' %}
    </div>
{% endblock %}
