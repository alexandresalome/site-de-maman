<header class="edp--header">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-3 col-sm-4 col--logo">
                <a href="{{ path('homepage') }}">
                    <img width="200" height="139" alt="{{ sitename }}" src="{{ asset('build/images/logo-new.png') }}" />
                </a>
            </div>
            <div class="col-lg-8 col-md-6 col-sm-8 col--title">
                <h1>
                    <a href="{{ path('homepage') }}">
                        {{ sitename }}
                    </a>
                    <div>
                        Pascal &amp; Rosa
                    </div>
                </h1>
            </div>
            <div class="edp--contact-group btn-group-vertical col-lg-2 col-md-3 col-sm-12 col--extra" role="group">
                <a class="btn btn-outline-secondary" href="tel:+(33)3.21.22.18.15">03.21.22.18.15</a>
                <a class="btn btn-outline-secondary" target="_blank" href="https://www.facebook.com/enviedunplat.salome.5">Facebook</a>
            </div>
        </div>
    </div>
</header>

{% if header_category_group is defined %}
<nav class="edp--nav navbar navbar-expand-md navbar-light bg-light">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="navbar-nav navbar-group me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    {% if header_category_group == 'fr' %}
                        Cuisine française
                    {% elseif header_category_group == 'pt' %}
                        Cuisine portugaise
                    {% elseif header_category_group == 'portage' %}
                        Portage de repas
                    {% endif %}
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" title="Cuisine française" href="{{ path('category_show', {group: 'fr', slug: get_categories('fr')[0].slug}) }}">Cuisine française</a></li>
                    <li><a class="dropdown-item" title="Cuisine portugaise" href="{{ path('category_show', {group: 'pt', slug: get_categories('pt')[0].slug}) }}">Cuisine portugaise</a></li>
                    <li><a class="dropdown-item" title="Portage de repas" href="{{ path('portage') }}">Portage de repas</a></li>
                </ul>
            </li>
        </ul>
        {% if header_category_group != 'portage' %}
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav navbar-categories me-auto mb-2 mb-lg-0">
                {% for category in get_categories(header_category_group) %}
                <li class="nav-item{% if category.slug == active|default %} active{% endif %}">
                    <a class="nav-link{% if category.slug == active|default %} active{% endif %}" aria-current="page" href="{{ path('category_show', {slug: category.slug, group: header_category_group}) }}">
                        {{ category.name }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
        <ul class="navbar-nav mb-2 mb-lg-0">
            {{ render(controller('App\\Controller\\CartController::panelAction')) }}
        </ul>
    </div>
</nav>
{% endif %}
